  %tr
    %th Question
    %th Answer
    %th Questioner twitter username
    %th Question number
    %th
    %th
    %th

  - @qas.each do |qa|
    %tr
      %td= qa.question_id
      %td= qa.answer_id
      %td= qa.questioner_twitter_username
