= form_for @qa do |f|
  -if @qa.errors.any?
    #error_explanation
      %h2= "#{pluralize(@qa.errors.count, "error")} prohibited this qa from being saved:"
      %ul
        - @qa.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :question_id
    = f.text_field :question_id
  .field
    = f.label :answer_id
    = f.text_field :answer_id
  .field
    = f.label :questioner_twitter_username
    = f.text_field :questioner_twitter_username
  .actions
    = f.submit 'Save'
